<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filterBottomSheetWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="10dp"
    android:paddingEnd="20dp"
    android:paddingBottom="30dp">
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:text="Filters"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="171dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Categories"
            android:textSize="19dp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/spinnerCategories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="169dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Payment Method"
            android:textSize="19dp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/spinnerPayment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/transactionFromAmount"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:hint="From Amount"
            android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/transactionToAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="numberDecimal"
        android:hint="To Amount"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/transactionFromDate"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:hint="From Date"/>
        <EditText
            android:id="@+id/transactionToDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="To Date"
            />
    </LinearLayout>
    <Button
        android:id="@+id/applyFiltersTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0"
        android:text="Apply"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="130dp"/>

    </LinearLayout>