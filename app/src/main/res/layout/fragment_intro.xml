<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/appInto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/login_intro1" />

        <TextView
            android:id="@+id/appIntroFirstSentence"
            style="@style/font_family_normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finzo helps you monitor your expenses"
            android:textAlignment="center"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/appIntroSecondSentence"
            style="@style/font_family_normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Sign in and we will guide you through the application!"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/appIntroButton"
            style="@style/primaryRoundedButtonBlock"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Got it!" />

    </LinearLayout>
</ScrollView>