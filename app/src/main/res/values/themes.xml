<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoneyControl" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4764CC</item>
        <item name="colorPrimaryVariant">#4764CC</item>
        <item name="colorOnPrimary">@color/buttonLabel</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4764CC</item>
        <item name="colorSecondaryVariant">#4764CC</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/OutlinedRoundedBox</item>
    </style>

    <style name="OutlinedRoundedBox" parent="android:Widget.EditText">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayRoundedInput</item>
    </style>

    <style name="ShapeAppearanceOverlayRoundedInput" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
    </style>

    <style name="baseRoundedButton" parent="RoundedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingEnd">25sp</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="RoundedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/RoundedButtonBorders</item>
    </style>
    <style name="RoundedButtonBorders">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>

    <style name="basePrimaryRoundedButton" parent="baseRoundedButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
    <style name="primaryRoundedButtonBlock" parent="basePrimaryRoundedButton">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="layout_list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#FFFBFB</item>
    </style>
    <style name="SignInSignUpContainer">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="baseSmallButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_small_text</item>
    </style>

</resources>